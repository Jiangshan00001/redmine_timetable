<%= render 'header' %>
<div class="contextual">
  <%= link_to l(:timetable), ttevents_path, class: 'icon icon-calendar' %>
</div>
<h2>
  <%= l(:statistics)%>
</h2>
<% html_title l(:statistics) %>
<%= render 'notice' %>
<h3>日ごとの終了イベント数と作業時間（直近１０日）</h3>
<table class="list">
  <tr>
    <th>年月</th>
    <th>個数</th>
    <th>時間</th>
  </tr>
  <% @ttevents.each do |ttevent| %>
    <tr>
      <td>
        <%= ttevent.year %> / <%= ttevent.month %> / <%= ttevent.day %>
      </td>
      <td>
        <%= ttevent.count %>
      </td>
      <td>
        <%= ttevent.sum %>
      </td>
    </tr>
  <% end %>
</table>
<% content_for :sidebar do %>
  <%= render 'side_bar' %>
<% end %>
