<%= Gon::Base.render_data({}) %>
<div class="contextual">
  <%= link_to l(:timetable), ttevents_path %>
</div>
<h2>
  <%= l(:statistics)%>
</h2>
<%= render 'notice' %>
<h3>日毎の平均時間(稼働日のみ)</h3>
<%= @ttevents_average %> 時間
<h3>日ごとの終了イベント数（直近１０日）</h3>
<table class="list">
  <tr>
    <th>年月</th>
    <th>個数</th>
  </tr>
  <% @ttevents_by_day.each do |key, value| %>
    <tr>
      <td>
        <%= key[0] %> / <%= key[1] %> / <%= key[2] %>
      </td>
      <td>
        <%= value %>
      </td>
    </tr>
  <% end %>
</table>
<h3>日ごとの作業時間数(直近１０日)</h3>
<table class="list">
  <tr>
    <th>年月</th>
    <th>時間</th>
  </tr>
  <% @ttevents_hours_by_day.each do |key, value| %>
    <tr>
      <td>
        <%= key[0] %> / <%= key[1] %> / <%= key[2] %>
      </td>
      <td>
        <%= value %>
      </td>
    </tr>
  <% end %>
</table>
<% content_for :sidebar do %>
  <%= render 'side_bar' %>
<% end %>
