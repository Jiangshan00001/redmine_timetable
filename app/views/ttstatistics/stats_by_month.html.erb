<%= render 'header' %>
<div class="contextual">
  <%= link_to l(:timetable), ttevents_path, class: 'icon icon-calendar' %>
</div>
<h2>
  <%= l(:statistics)%>
</h2>
<% html_title l(:statistics) %>
<%= render 'notice' %>
<h3>月ごとの終了イベント数</h3>
<% if @ttevents_by_month.nonzero? %>
  <table class="list">
    <tr>
      <th>年月</th>
      <th>個数</th>
    </tr>
    <% @ttevents_by_month.each do |key, value| %>
      <tr>
        <td>
          <%= key[0] %> / <%= key[1] %>
        </td>
        <td>
          <%= value %>
        </td>
      </tr>
    <% end %>
  </table>
<% else %>
  <p class="nodata"><%= l(:label_no_data) %></p>
<% end %>
<h3>月ごとの作業時間数</h3>
<% if @ttevents_hours_by_month.nonzero? %>
  <table class="list">
    <tr>
      <th>年月</th>
      <th>時間</th>
    </tr>
    <% @ttevents_hours_by_month.each do |key, value| %>
      <tr>
        <td>
          <%= key[0] %> / <%= key[1] %>
        </td>
        <td>
          <%= value %>
        </td>
      </tr>
    <% end %>
  </table>
<% else %>
  <p class="nodata"><%= l(:label_no_data) %></p>
<% end %>
<% content_for :sidebar do %>
  <%= render 'side_bar' %>
<% end %>
